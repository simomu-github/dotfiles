root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_size = 4
charset = utf-8

[*.sh]
indent_style = tab

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.cs]
end_of_line = crlf

[*.{shader,cginc}]
end_of_line = crlf

[*.ps1]
end_of_line = crlf
indent_size = 2

[*.bat]
end_of_line = crlf

[*.rb]
indent_size = 2

[Makefile]
indent_style = tab

[*.groovy]
indent_size = 2

[Jenkinsfile]
indent_size = 2

[*.conf]
indent_size = 2

[*.json]
indent_size = 2

[*.haml]
indent_size = 2

[*.erb]
indent_size = 2

[*.tf]
indent_size = 2
